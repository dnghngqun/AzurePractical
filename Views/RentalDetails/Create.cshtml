@model ComicSystem.Models.RentalDetail

<h2>Create Rental Detail</h2>

<form asp-action="Create">
<div class="form-group">
    <label asp-for="RentalID"></label>
    <select asp-for="RentalID" asp-items="ViewBag.RentalID" class="form-control"></select>
    </div>
    <div class="form-group">
    <label asp-for="ComicBookID"></label>
    <select asp-for="ComicBookID" asp-items="ViewBag.ComicBookID" class="form-control"></select>
    </div>
    <div class="form-group">
    <label asp-for="Quantity"></label>
    <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
    <label asp-for="PricePerDay"></label>
    <input asp-for="PricePerDay" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    </form>